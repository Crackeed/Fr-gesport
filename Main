import java.util.ArrayList;

import javafx.application.Application;
import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.layout.GridPane;
import javafx.scene.layout.HBox;
import javafx.scene.layout.VBox;
import javafx.scene.paint.Color;
import javafx.scene.text.Font;
import javafx.stage.Stage;

public class Main extends Application {

	public static void main(String[] args) {launch(args);}

	static QuestionList QuestionList = new QuestionList();
	VBox vbMain = new VBox();
	HBox hbScore = new HBox();
	GridPane gpAnswers = new GridPane();
	int Score = 0;
	String Difficulty = "Easy";
	Label lbDifficulty = new Label(Difficulty);
	Color DiffColour = Color.LIGHTGREEN;
	Label lbScore = new Label("Your score is: " + Score);
	Label Question = new Label("Impact");
	Button Hint = new Button("Click here for a hint");
	Label lbHint = new Label();
	Button rightAnswer = new Button("Motherland");
	Button wrongAnswer1 = new Button("Calibri");
	Button wrongAnswer2 = new Button("Stencil");
	Button wrongAnswer3 = new Button("Txt");
	Button nextQuest = new Button("Do you want to proced to the next question");

	VBox vbWrong = new VBox();
	Label endScore = new Label();
	Label end = new Label();
	Button newgame = new Button("Play again?");

	public void start(Stage window) 
	{
		rightAnswer.setMinSize(180, 30); rightAnswer.setFont(Font.font("Motherland", 14));
		wrongAnswer1.setMinSize(180, 30); wrongAnswer1.setFont(Font.font("Calibri", 14));
		wrongAnswer2.setMinSize(180, 30); wrongAnswer2.setFont(Font.font("Stencil", 14));
		wrongAnswer3.setMinSize(180, 30); wrongAnswer3.setFont(Font.font("Txt", 14));
		Hint.setFont(Font.font("Algerian", 14));
		lbScore.setFont(Font.font("Comic Sans MS", 16)); lbScore.setTextFill(Color.WHITE);
		lbDifficulty.setFont(Font.font("Comic Sans MS", 16)); lbDifficulty.setTextFill(DiffColour);
		Question.setFont(Font.font("Impact", 20)); Question.setTextFill(Color.WHITE);
		
		gpAnswers.setAlignment(Pos.CENTER);
		gpAnswers.setHgap(50);
		gpAnswers.setVgap(50);
		
		hbScore.setAlignment(Pos.CENTER);
		hbScore.setSpacing(500);
		hbScore.getChildren().addAll(lbScore, lbDifficulty);
		
		gpAnswers.add(wrongAnswer1, 0, 0);
		gpAnswers.add(wrongAnswer2, 0, 1);
		gpAnswers.add(wrongAnswer3, 1, 0);
		gpAnswers.add(rightAnswer, 1, 1);
		
		vbMain.setBackground(null);
		vbMain.setAlignment(Pos.CENTER);
		vbMain.setSpacing(25);

		vbMain.getChildren().addAll(Question, gpAnswers, Hint, hbScore);
		Scene scMain = new Scene(vbMain, 1000, 680);
		scMain.setFill(Color.DARKBLUE);

		window.setScene(scMain);
		window.setResizable(false);
		window.show();
	}
	
	private static void getNewQuestion()
	{
		
		int iRandom = (int) Math.random() * QuestionList.getLength();
	}
	
	private void addQuestion(String Question, String correctAnswer, String wrongAnswer1, String wrongAnswer2, String wrongAnswer3, String hint)
	{
		QuestionList.addQuestion(Question, correctAnswer, wrongAnswer1, wrongAnswer2, wrongAnswer3, hint);
	}
	
	private void nextQuestion(int number)
	{
		Question.setText("");
	}
}
